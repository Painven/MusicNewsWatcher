<Window x:Class="BandcampWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BandcampWatcher.ViewModels"
        xmlns:con="clr-namespace:BandcampWatcher.Infrastructure.Converters"
        xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"        
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel, IsDesignTimeCreatable=False}"
        Title="{Binding Title}" Height="300" Width="600">
    <Window.Background>
        <ImageBrush TileMode="FlipXY" ViewportUnits="Absolute"
                            Viewport="0,0,200,200"
                            Stretch="Fill" ImageSource="../Assets/bricks.jpg" />
    </Window.Background>
    <Window.Resources>
        <SolidColorBrush x:Key="MainWindowTransparentBrush" Opacity="0.9" Color="WhiteSmoke"/>
        <con:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter"></con:NotNullToVisibilityConverter>
        <con:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"></con:BoolToVisibilityConverter>
        <con:BoolToForegroundColorConverter x:Key="BoolToForegroundColorConverter"></con:BoolToForegroundColorConverter>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5 2 5 2" Background="{StaticResource MainWindowTransparentBrush}">
            <Button Command="{Binding CheckUpdatesSelectedCommand}"
                    ToolTip="Обновить выбраного исполнителя"
                    Style="{StaticResource ToolButtonStyle}">
                <icons:PackIconFontAwesome Kind="HandPointerSolid"/>
            </Button>

            <Button Command="{Binding CheckUpdatesAllCommand}" 
                    ToolTip="Обновить всех"
                    Style="{StaticResource ToolButtonStyle}">
                <icons:PackIconFontAwesome Kind="TableSolid"/>
            </Button>
            <Rectangle Width="1" VerticalAlignment="Stretch" Fill="LightBlue" Margin="4 2"/>

            <Button Command="{Binding AddArtistCommand}" Style="{StaticResource ToolButtonStyle}">
                <icons:PackIconFontAwesome Kind="PlusCircleSolid"/>
            </Button>
            <Button Command="{Binding EditArtistCommand}" Style="{StaticResource ToolButtonStyle}">
                <icons:PackIconFontAwesome Kind="PencilAltSolid"/>
            </Button>
            <Button Command="{Binding DeleteArtistCommand}" Style="{StaticResource ToolButtonStyle}">
                <icons:PackIconFontAwesome Kind="TrashSolid"/>
            </Button>
        </StackPanel>

        <Grid Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="1" BorderBrush="Transparent" CornerRadius="4" Margin="2">

                <ListBox ItemsSource="{Binding TrackedArtists}" SelectedItem="{Binding SelectedArtist}" 
                         Background="{StaticResource MainWindowTransparentBrush}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="2 2 4 12" BorderBrush="Gray" BorderThickness="2" CornerRadius="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="LightGray"/>
                                </Border.Effect>
                                <Grid >
                                    <Image Source="{Binding Image}" Width="200" Height="200" Stretch="Uniform"/>
                                    <Label Content="{Binding Name}"
                                           Foreground="{Binding HasNew, Converter={StaticResource BoolToForegroundColorConverter}, ConverterParameter='Yellow;White'}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Background="#7f000000"
                                           VerticalAlignment="Bottom" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
                                    <ProgressBar IsIndeterminate="True" 
                                                 Panel.ZIndex="999"
                                                 Opacity="0.25"
                                                 Visibility="{Binding CheckInProgress, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </Border>

            <Border BorderThickness="1" BorderBrush="Transparent" CornerRadius="4" Margin="2"
                    Grid.Column="1" MinWidth="350" MaxWidth="350">
                <ListBox ItemsSource="{Binding SelectedArtist.Albums}" Background="{StaticResource MainWindowTransparentBrush}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Command="{Binding OpenInBrowserCommand}" Margin="2 2 6 2" Style="{StaticResource ToolButtonStyle}">
                                    <icons:PackIconFontAwesome Kind="LinkSolid"/>
                                </Button>
                                <TextBlock Text="{Binding Created, ConverterCulture=ru-RU, StringFormat='dd.MM.yyyy'}" Margin="2 2 8 2" 
                                           Foreground="{Binding IsViewed, Converter={StaticResource BoolToForegroundColorConverter}, ConverterParameter='Gray;Blue'}"/>
                                <Label Content="{Binding DisplayName}" Foreground="Yellow" FontWeight="Bold" Background="Navy" Margin="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>
        
        <ProgressBar Grid.Row="2" Height="24" Margin="2"
                     Opacity="0.4"
                     IsIndeterminate="True"
                     Visibility="{Binding InProgress, Converter={StaticResource BoolToVisibilityConverter}}"></ProgressBar>
    </Grid>
</Window>
