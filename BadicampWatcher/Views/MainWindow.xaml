<Window x:Class="BandcampWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BandcampWatcher.ViewModels"
        xmlns:con="clr-namespace:BandcampWatcher.Infrastructure.Converters"
        xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel, IsDesignTimeCreatable=False}"
        Title="{Binding Title}" Height="300" Width="600">

    <Window.Resources>
        <con:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter"></con:NotNullToVisibilityConverter>
        <con:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"></con:BoolToVisibilityConverter>
        <con:BoolToForegroundColorConverter x:Key="BoolToForegroundColorConverter"></con:BoolToForegroundColorConverter>

        <Style TargetType="Button">
                <Setter Property="Margin" Value="2 2 4 2"/>
                <Setter Property="Padding" Value="2"/>
                <Setter Property="Foreground" Value="Navy"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
            </Style>
        <Style TargetType="{x:Type icons:PackIconFontAwesome}">
            <Setter Property="Width" Value="22"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Foreground" Value="Navy"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="2">
            <Button Command="{Binding AddArtistCommand}">
                <icons:PackIconFontAwesome Kind="PlusCircleSolid"/>
            </Button>
            <Button Command="{Binding EditArtistCommand}">
                <icons:PackIconFontAwesome Kind="PencilAltSolid"/>
            </Button>
            <Button Command="{Binding DeleteArtistCommand}">
                <icons:PackIconFontAwesome Kind="TrashSolid"/>
            </Button>
            <Button Command="{Binding CheckUpdatesAllCommand}">
                <icons:PackIconFontAwesome Kind="SpinnerSolid"/>
            </Button>
            <Button Command="{Binding ShowSettingsWindowCommand}">
                <icons:PackIconFontAwesome Kind="CogsSolid"/>
            </Button>
        </StackPanel>

        <Grid Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="1" BorderBrush="LightGray" CornerRadius="4">
                <ListBox ItemsSource="{Binding TrackedArtists}" SelectedItem="{Binding SelectedArtist}" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="2 2 4 12" BorderBrush="Gray" BorderThickness="2" CornerRadius="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="LightGray"/>
                                </Border.Effect>
                                <Grid >
                                    <Image Source="{Binding Image}" Width="200" Height="200" Stretch="Uniform"/>
                                    <Label Content="{Binding Name}"
                                           Foreground="{Binding HasNew, Converter={StaticResource BoolToForegroundColorConverter}, ConverterParameter='Yellow;White'}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Background="#7f000000"
                                           VerticalAlignment="Bottom" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
                                    <ProgressBar IsIndeterminate="True" 
                                                 Panel.ZIndex="999"
                                                 Opacity="0.25"
                                                 Visibility="{Binding CheckInProgress, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </Border>

            <Border BorderThickness="1" BorderBrush="LightGray" CornerRadius="4" Grid.Column="1"
                    MaxWidth="300"
                    Visibility="{Binding SelectedArtist, Converter={StaticResource NotNullToVisibilityConverter}}">
                <ListBox ItemsSource="{Binding SelectedArtist.Albums}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Command="{Binding OpenInBrowserCommand}" Margin="2 2 6 2">
                                    <icons:PackIconFontAwesome Kind="LinkSolid"/>
                                </Button>
                                <TextBlock Text="{Binding Created, ConverterCulture=ru-RU, StringFormat='dd.MM.yyyy'}" Margin="2 2 8 2" 
                                           Foreground="{Binding IsViewed, Converter={StaticResource BoolToForegroundColorConverter}, ConverterParameter='Gray;Blue'}"/>
                                <Label Content="{Binding Title}" Foreground="Yellow" FontWeight="Bold" Background="Navy" Margin="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>
        
        <ProgressBar Grid.Row="2" Height="24" Margin="2"
                     Value="{Binding ProgressCurrent}"
                     Visibility="{Binding InProgress, Converter={StaticResource BoolToVisibilityConverter}}"
                     Maximum="{Binding TrackedArtists.Count}"></ProgressBar>
    </Grid>
</Window>
