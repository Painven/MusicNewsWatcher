<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MainSectionTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#4C5982" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="2,2,2,10" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="ToolPanelSectionCaption" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#333" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="2,2,2,10" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
    <Style x:Key="MainSectionBorder" TargetType="Border">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Background" Value="{StaticResource MainWindowTransparentBrush}" />
    </Style>
</ResourceDictionary>