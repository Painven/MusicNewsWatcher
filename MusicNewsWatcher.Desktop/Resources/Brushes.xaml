<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="MainWindowTransparentBrush" Opacity="0.9" Color="WhiteSmoke"/>
    <SolidColorBrush x:Key="ProvidersMenuBackground" Color="#231D49" Opacity="0.8"/>
    <SolidColorBrush x:Key="Scarlet" Color="#ff2400"/>

    <ImageBrush x:Key="MainWindowBackgroundTexture"
        TileMode="FlipXY" 
        ViewportUnits="Absolute"
        Viewport="0,0,200,200"
        Stretch="Fill" ImageSource="/Assets/bricks.jpg" />

    <SolidColorBrush x:Key="SettingsWindowBackground" Color="#FF1E57" Opacity="1"/>


    <LinearGradientBrush x:Key="GreenLinearGradientBrush">
        <GradientStop Color="#0ba360" Offset="0"/>
        <GradientStop Color="#3cba92" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>